<!doctype html>
<html lang="es-Ar">

<%- include('partials/head') %>

    <body>
        <div class="bodybg">
            <!-- Header Start -->
            <%- include('partials/header') %>
                <!-- Header End-->
                <section class="hero">

                    <div class="texture"></div>
                    <div class="diag-bg"></div>
                </section>

                <section class="recent-post">
                    <form action="/editpassword/<%= usuario.id %> " method="post" autocomplete="off" enctype="multipart/form-data">
                        <div class="cta-content2" style="padding:2em 0 2.5em; margin:3em 20%">
                            <div class="container" style="display:block; justify-content: center; align-items: center;">
                                <div class="d-md-flex row align-items-center text-xl-start content-img"
                                    style="flex-direction: column; justify-content: center;">
                                    
                                    <div class="form-group col-lg-4">
                                        <label for="passactual">Contraseña Actual</label>
                                        <input type="password" class="form-control <%= (typeof inputs != 'undefined' && typeof errors.passactual == 'undefined')?"is-valid":(typeof errors != 'undefined' && errors.passactual)?"is-invalid": ""  %>" id="passactual" name="passactual" value="<%= (typeof inputs != 'undefined' && inputs.passacutal)?inputs.passacutal:'' %>" placeholder="Ingrese su contraseña actual">


                                        <%#<input type="password" class="form-control" name="passactual" id="passactual"
                                            autocomplete="new-password"></input>%>
                                        <small id="errorPass" class="text-danger">
                                            <%= (typeof errors !='undefined' && errors.passactual)?errors.passactual.msg: "" %>
                                        </small>
                                    </div>
                                    <div class="form-group col-lg-4">
                                        <label for="pass">Nueva Contraseña</label>
                                        <input type="password" class="form-control" name="passnew" id="passnew" placeholder="Inrese su nueva contraseña"></input>
                                        <small id="errorPass" class="text-danger">
                                            <%= (typeof errors !='undefined' && errors.pass)?errors.pass.msg: "" %>
                                        </small>
                                    </div>

                                    <div class="form-group col-lg-4">
                                        <label for="pass2">Reingresar contraseña</label>
                                        <input type="password" class="form-control" name="pass2" placeholder="Reingrese constraseña">
                                        <small id="errorPass2" class="text-danger">
                                            <%= (typeof errors !='undefined' && errors.pass2)?errors.pass2.msg: "" %>
                                        </small>
                                    </div>
                                    <div class="d-flex justify-content-center" style="padding: 0.5em 0em;">
                                        <div class="subscribe-btn" data-aos="fade-left" data-aos-delay="200"
                                            data-aos-offset="0">
                                            <button type="submit" class="btn btn-primary">Guardar</button>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-center" style="padding: 0.5em 0em;">
                                        <div class="subscribe-btn" data-aos="fade-left" data-aos-delay="400"
                                            data-aos-offset="0">
                                            <a href="/profile/<%= usuario.id %> " class="btn btn-primary">Cancelar</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </section>

                <!-- Footer Start-->
                <%- include('partials/footer') %>
                    <!-- Fotter End-->

        </div>
        <!-- Scripts Start-->
        <%- include('partials/scripts') %>
            <!-- Scripts End-->
    </body>

</html>