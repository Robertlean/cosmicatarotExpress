<!doctype html>
<html lang="es-Ar">

<%- include('partials/head') %> 
<script>var cantclick = 0;  document.getElementById("imgposteo").addEventListener("click", function( event ) {
    // presentar la cuenta de clicks realizados sobre el elemento con id "prueba"
    cantclick++;
    if(cantclick < 10){      
        console.log(cantclick)
    }
  }, false)
</script>

<body>
   
    <div class="bodybg">
        <!-- Header Start -->
        <%- include('partials/header') %> 
        <!-- Header End-->       

        <section class="recent-posts">
            <div class="container">
                <form action="/post" method="post">
                    <div class="text-center formtitulo">
                        <input class="form-control form-control-lg align-text-center" type="text"
                            placeholder="Escribe un titulo para el post" id="title" name="title">
                        <input id="subtitle" name="subtitle" class="field form-control align-text-center" type="text" placeholder="Escribe un subtitulo al post">
                    </div>
                    <div class="cta-content" style="padding:1em 3em">
                        <div class="hero-unit">
                        <!--funcion subiendo imagen-->
                        <% let cantclick =0; while(cantclick < 10){ %> 
                            <div id="imgposteo"><input type="file" name="imgpost" id=" imgpost" multiple></div> 

                            <input type="text" class="fiel form-control textarea" id="context" name="context" placeholder="Empieza con algo motivador..."
                                style="width: 80%; height: 200px; text-align: center; justify-content: center;">
                            <% cantclick++ %> 
                        <% } %>                         
                    
                            <!--<input type="text" class="fiel form-control textarea" id="context" name="context" placeholder="Empieza con algo motivador..."
                                style="width: 80%; height: 200px; text-align: center; justify-content: center;">-->
                        </div>
                        <div class="tagsenter">
                            <h6>Ingresé tags separados por coma por ejemplo: Cosmica, Tarot</h6>
                            <input type="text" name="tags" id="tags" style="width: 100%; height: 100px">
                        </div>   
                        <div class="signopost" style="display: flex; justify-content: center; flex-direction: column;">
                            <h6>Elija opción signo del post</h6>
                            <select name="optsigno" id="signopt">
                                <option value="0">Todos</option>                                
                                <option value="1">Acuario</option>
                                <option value="2">Piscis</option>
                                <option value="3">Aries</option>
                                <option value="4">Tauro</option>
                                <option value="5">Geminis</option>
                                <option value="6">Cancer</option>
                                <option value="7">Leo</option>
                                <option value="8">Virgo</option>
                                <option value="9">Libra</option>
                                <option value="10">Escorpio</option>
                                <option value="11">Sagitario</option>
                                <option value="12">Capricornio</option>
                            </select>
                        </div>                     
                        <div class="d-flex justify-content-center">
                            <div class="subscribe-btn" data-aos="fade-left" data-aos-delay="400" data-aos-offset="0" style="display: flex; margin-bottom: 2em;">
                                <input type="submit" value="Guardar" class="btn2 btn-primary" style="margin:0 .5em">
                                <input type="submit" value="Cancelar" class="btn2 btn-primary" style="margin:0 .5em">
                                
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </section>

        <!-- Footer Start-->
        <%- include('partials/footer') %> 
        <!-- Fotter End-->

    </div>
   <!-- Scripts Start-->
   <%- include('partials/scripts') %> 

   
   <!-- Scripts End-->

</body>

</html>