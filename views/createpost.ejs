        <script>
            var cantclick = 0;
            document.getElementById("createsection").addEventListener("click", function (event) {
                // presentar la cuenta de clicks realizados sobre el elemento con id "prueba"
                event.preventDefault()
                cantclick++;
                /*if (cantclick < 10) {
                    console.log(cantclick)

                    id - cantclick
                }*/
                let id = `seccion-${cantclick}`
                

                var seccion = document.createElement("section");
                seccion.setAttribute("class", "fiel form-control textarea")
                seccion.setAttribute("id", id)
                var inputtext = document.createElement("input");
                inputtext.setAttribute("type", "text");
                inputtext.setAttribute("class", "fiel form-control textarea");
                var imgposteo = document.createElement("div");
                var inputfile = document.createElement("input");
                inputfile.setAttribute("type", "file");

                imgposteo.appendChild(inputfile)
                seccion.appendChild(inputtext)
                seccion.appendChild(imgposteo)
                

                document.getElementById("hero-unit").appendChild(seccion)

            }, false)

